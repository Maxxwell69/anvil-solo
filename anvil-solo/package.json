{
  "name": "anvil-solo",
  "version": "3.7.0",
  "description": "Solana Meme Coin Trading Bot - DCA, Ratio Trading, and Volume Generation",
  "main": "dist/main/main.js",
  "author": "Anvil",
  "license": "Commercial",
  "scripts": {
    "build": "tsc && node -e \"require('fs-extra').copySync('src/renderer', 'dist/renderer')\"",
    "build:win": "tsc && xcopy /E /I /Y src\\renderer dist\\renderer",
    "start": "electron dist/main/main.js",
    "dev": "npm run build && npm start",
    "package": "npm run build && electron-builder",
    "rebuild": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.anvil.solo",
    "productName": "Anvil Solo",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "asar": true,
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**/*",
      "**/node_modules/@solana/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Anvil Labs",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Anvil Solo",
      "perMachine": true,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "license": "LICENSE.txt",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "include": "installer-script.nsh"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.finance"
    },
    "linux": {
      "target": "AppImage",
      "category": "Finance"
    },
    "publish": {
      "provider": "github",
      "owner": "Maxxwell69",
      "repo": "anvil-solo",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "@jup-ag/api": "^6.0.30",
    "@solana/codecs-data-structures": "^4.0.0",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.95.8",
    "better-sqlite3": "^11.7.0",
    "bs58": "^6.0.0",
    "cross-fetch": "^4.0.0",
    "electron-updater": "^6.6.2",
    "node-cron": "^3.0.3",
    "node-machine-id": "^1.1.12",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.14.1",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "fs-extra": "^11.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
